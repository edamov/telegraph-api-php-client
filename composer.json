{
    "name": "edamov/telegraph-api-php-client",
    "type": "library",
    "description": "The simple PHP client for Telegraph API.",
    "keywords": [
        "telegraph",
        "api",
        "php",
        "sdk"
    ],
    "homepage": "https://github.com/edamov/telegraph-api-php-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Arthur Edamov",
            "email": "edamov@gmail.com",
            "homepage": "https://github.com/edamov",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0|>=8.0",
        "ext-curl": "*"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Telegraph\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "edamov\\telegraph\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    },
    "minimum-stability": "dev",
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "config": {
        "sort-packages": true
    }
}
